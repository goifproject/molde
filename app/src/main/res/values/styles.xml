<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:statusBarColor">@color/colorLittleGray</item>
    </style>

    <style name="AppNoBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorLittleGray</item>
    </style>

    <style name="SplashTheme" parent="AppNoBarTheme">
        <!--<item name="android:windowBackground">@drawable/splash_background</item>-->
    </style>

    <style name="LocalSearchInputStyle">
        <item name="android:imeOptions">actionSearch</item>
        <item name="colorControlActivated">@color/colorAccentYellow</item>
        <item name="android:textCursorDrawable">@color/colorDeepDarkGray</item>
        <item name="android:textColor">@color/colorDeepDarkGray</item>
        <item name="android:textColorHint">@color/colorLittleDarkGray</item>
        <item name="android:textColorHighlight">@color/colorYellow</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/colorDefaultText</item>
    </style>

    <style name="MyAlertDialogTheme">

        <item name="android:colorAccent">@color/white</item>

        <item name="android:bottomBright">@android:color/white</item>
        <item name="android:bottomDark">@android:color/white</item>
        <item name="android:bottomMedium">@android:color/white</item>
        <item name="android:centerBright">@android:color/white</item>
        <item name="android:centerDark">@android:color/white</item>
        <item name="android:centerMedium">@android:color/white</item>
        <item name="android:fullBright">@color/white</item>
        <item name="android:fullDark">@color/white</item>
        <item name="android:topBright">@color/white</item>
        <item name="android:topDark">@android:color/white</item>

        <item name="android:buttonBarButtonStyle">@style/Widget.AppCompat.Button.ButtonBar.AlertDialog</item>

        <item name="android:listPreferredItemPaddingLeft">30dp</item>
        <item name="android:listPreferredItemPaddingRight">30dp</item>
        <item name="android:listPreferredItemPaddingStart">30dp</item>
        <item name="android:listPreferredItemPaddingEnd">30dp</item>

    </style>

    <style name="dialogButton" parent="Widget.AppCompat.Button">

        <item name="android:buttonBarButtonStyle">@style/Widget.AppCompat.Button.ButtonBar.AlertDialog</item>
        <item name="android:background">#00000000</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="android:padding">30dp</item>
    </style>


</resources>
