<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:layout_margin="4dp">

    <ToggleButton
        android:id="@+id/check_favorite_toggle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_favorite_star_off"
        android:checked="false"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:textOff=""
        android:textOn="" />

    <TextView
        android:id="@+id/map_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/check_favorite_toggle"
        android:layout_marginTop="6dp"
        android:layout_marginStart="8dp"
        android:text="이름 데이터 안 넘어옴"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/map_info_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/check_favorite_toggle"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@+id/map_info_title"
        android:text="주소 데이터 안 넘어옴"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorDivision" />

</RelativeLayout>