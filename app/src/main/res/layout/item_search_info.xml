<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_info_container"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/search_info_delete_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_map_search_delete" />

    <TextView
        android:id="@+id/search_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_toStartOf="@id/search_info_delete_button"
        android:textColor="#646464"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/search_info_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_info_title"
        android:layout_marginStart="8dp"
        android:layout_toStartOf="@id/search_info_delete_button"
        android:textColor="#646464"
        android:textSize="10sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorDivision" />

</RelativeLayout>