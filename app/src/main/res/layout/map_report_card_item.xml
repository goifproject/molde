<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/report_card_view_layout"
    android:layout_width="match_parent"
    android:layout_height="148dp"
    app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/report_card_image"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_alignParentLeft="true"
            android:background="@color/colorLittleWhiteGray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="132dp"
            android:layout_toEndOf="@id/report_card_image"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/report_info_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="YYYY. MM. DD"
                android:textColor="@color/colorInfoTextColor"
                android:layout_marginStart="12dp" />

            <TextView
                android:id="@+id/report_card_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorInfoTextColor"
                android:layout_below="@id/report_info_date"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:text="타이틀"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/report_card_detail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorInfoTextColor"
                android:layout_below="@+id/report_card_address"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:text="컨텐츠"
                android:maxLines="2"
                android:ellipsize="end"/>
        </RelativeLayout>


</android.support.v7.widget.CardView>
