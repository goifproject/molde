<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sub_desc_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/sub_tutorial_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/molde_sub_desc_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/go_to_start_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_layout_height"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:visibility="gone">

        <Button
            android:id="@+id/go_to_start_button"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/fui_transparent"
            android:text="@string/confirm"
            android:textSize="16sp"
            android:visibility="visible" />

    </FrameLayout>

</FrameLayout>
