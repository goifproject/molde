<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG">

    <TextView
        android:id="@+id/feed_update_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/colorInfoTextColor"
        android:textSize="10sp"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        android:layout_toStartOf="@id/feed_sort_toggle"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/feed_update_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:textColor="@color/colorInfoTextColor"
        android:textSize="10sp"
        android:layout_below="@id/feed_update_text"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        android:layout_toStartOf="@id/feed_sort_toggle"
        android:visibility="visible"/>

    <ToggleButton
        android:id="@+id/feed_sort_toggle"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_feed_toggle_off"
        android:checked="false"
        android:textColor="@color/colorInfoTextColor"
        android:textOff="@string/feedSortCategory"
        android:textOn="@string/feedSortCategory"
        android:textSize="10sp" />

    <com.limefriends.molde.screen.common.addOnListview.AddOnScrollRecyclerView
        android:id="@+id/feed_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/feed_sort_toggle"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="@dimen/bottom_layout_height"
        tools:listitem="@layout/item_feed" />

</RelativeLayout>
