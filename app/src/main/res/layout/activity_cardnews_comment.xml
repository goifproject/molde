<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG">

    <com.limefriends.molde.comm.custom.addOnListview.AddOnScrollRecyclerView
        android:id="@+id/comment_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/comment_input"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:listitem="@layout/item_cardnews_comment" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/comment_input"
        android:background="@color/colorDivider" />

    <EditText
        android:id="@+id/comment_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_layout_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:hint="@string/hint_input_comment"
        android:paddingEnd="76dp"
        android:paddingStart="16dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/comment_send_button"
        android:layout_width="@dimen/bottom_layout_height"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/comment_input"
        android:layout_alignEnd="@+id/comment_input"
        android:layout_alignTop="@+id/comment_input"
        android:background="@color/colorAccent"
        android:text="@string/post" />

</RelativeLayout>