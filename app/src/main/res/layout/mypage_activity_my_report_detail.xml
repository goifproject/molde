<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu_mypage.report.MyPageMyReportDetailActivity"
    android:background="@color/colorFeedBG">
    <RelativeLayout
        android:id="@+id/mypage_detail_report_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/mypage_detail_report_image"
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:src="@drawable/img_01_01"
            android:scaleType="centerCrop"
            android:layout_margin="14dp" />
        <TextView
            android:id="@+id/mypage_detail_report_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신고내용 : TEST"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_below="@+id/mypage_detail_report_image"
            android:textColor="@color/colorDefaultText"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
        <TextView
            android:id="@+id/mypage_detail_report_location_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="신고위치 : "
            android:textColor="@color/colorDefaultText"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_below="@+id/mypage_detail_report_content"/>
        <TextView
            android:id="@+id/mypage_detail_report_location_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="24dp"
            android:layout_below="@+id/mypage_detail_report_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/colorDefaultText"
            android:text="테스트 위치" />

        <View
            android:id="@+id/mypage_detail_report_div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivision"
            android:layout_below="@+id/mypage_detail_report_location_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"/>
        
        <Button
            android:id="@+id/mypage_detail_report_cancel_button"
            android:layout_width="92dp"
            android:layout_height="32dp"
            android:background="@drawable/frame_rounded"
            android:backgroundTint="@color/colorPrimary"
            android:layout_below="@+id/mypage_detail_report_div"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="12dp"
            android:layout_alignParentEnd="true"
            android:text="신고취소"
            android:textColor="@color/colorInfoTextColor"
            android:textStyle="bold"
            style="?android:attr/borderlessButtonStyle"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mypage_detail_report_status_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@+id/mypage_detail_report_layout"
        android:layout_marginTop="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신고 결과"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorInfoTextColor"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>
    </RelativeLayout>
</RelativeLayout>