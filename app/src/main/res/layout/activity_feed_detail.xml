<?xml version="1.0" encoding="utf-8"?><!-- TODO 폰트 사이즈, 크기, 색상 공통으로 적용할 것 --><!-- TODO 각종 색깔 공통으로 관리할 것 - 배경 등 --><!-- TODO 아이콘 크기 공통 조절, 위젯 스타일 적용 -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMypageSettingDiv">

    <LinearLayout
        android:id="@+id/feed_detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 신고 내용 -->
        <RelativeLayout
            android:id="@+id/mypage_detail_report_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:visibility="visible">

            <FrameLayout
                android:id="@+id/mypage_detail_report_image_container"
                android:layout_width="match_parent"
                android:layout_height="216dp"
                android:layout_margin="14dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/mypage_detail_report_image_pager"
                    android:layout_width="match_parent"
                    android:layout_height="216dp" />

                <FrameLayout
                    android:id="@+id/mypage_detail_report_image_indicator_container"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.8"
                    android:background="@color/white">

                    <com.pm10.library.CircleIndicator
                        android:id="@+id/mypage_detail_report_image_indicator"
                        android:layout_width="144dp"
                        android:layout_height="10dp"
                        android:layout_centerInParent="true"
                        app:p_defaultColor="@color/colorLittleDarkGray"
                        app:p_gap="16dp"
                        app:p_radius="5dp"
                        app:p_selectedColor="@color/black" />

                </FrameLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/mypage_detail_report_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mypage_detail_report_image_container"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:text="신고위치 : "
                android:textColor="@color/colorDefaultText"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mypage_detail_report_location_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mypage_detail_report_image_container"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="90dp"
                android:textColor="@color/colorDefaultText"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mypage_detail_report_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mypage_detail_report_location_content"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="신고내용 : "
                android:textColor="@color/colorDefaultText"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mypage_detail_report_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mypage_detail_report_location_content"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorDefaultText"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/mypage_detail_report_div"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/mypage_detail_report_content"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorDivision" />

            <Button
                android:id="@+id/mypage_detail_report_cancel_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="92dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/mypage_detail_report_div"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/bg_frame_rounded"
                android:backgroundTint="@color/colorPrimary"
                android:text="신고취소"
                android:textColor="@color/colorInfoTextColor"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>

        <!-- 사용자용 신고 결과 -->
        <RelativeLayout
            android:id="@+id/report_detail_normal"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:visibility="visible">

            <TextView
                android:id="@+id/mypage_detail_report_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="신고 결과"
                android:textColor="@color/colorInfoTextColor"
                android:textSize="14sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/mypage_detail_report_result"
                android:layout_centerInParent="true"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/siren_bad_status"
                    android:layout_width="48dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:contentDescription="@string/siren_red_dead"
                    android:src="@drawable/ic_feed_siren_red_h"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/siren_receiving_status"
                    android:layout_width="32dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="6dp"
                    android:contentDescription="@string/siren_red"
                    android:src="@drawable/ic_feed_siren_red_v"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/siren_clean_status"
                    android:layout_width="32dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="6dp"
                    android:contentDescription="@string/siren_green"
                    android:src="@drawable/ic_feed_siren_green"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/siren_found_status"
                    android:layout_width="32dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="6dp"
                    android:contentDescription="@string/siren_white"
                    android:src="@drawable/ic_feed_siren_white"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="216dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="72dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_frame_rounded"
                        android:backgroundTint="@color/colorResultMsgBox" />

                    <TextView
                        android:id="@+id/report_detail_result_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mypage_detail_report_ing"
                    android:layout_width="312dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="67dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <View
                            android:id="@+id/myfeed_progress_line_first"
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_weight="1"
                            android:background="@color/colorDivision" />

                        <View
                            android:id="@+id/myfeed_progress_line_second"
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_weight="1"
                            android:background="@color/colorDivision" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/myfeed_progress_dot_first_yellow"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_feed_dot_yellow" />

                    <ImageView
                        android:id="@+id/myfeed_progress_dot_second"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_feed_dot_grey" />

                    <ImageView
                        android:id="@+id/myfeed_progress_dot_third"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_feed_dot_grey" />

                    <ImageView
                        android:id="@+id/myfeed_progress_dot_second_yellow"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_feed_dot_yellow"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/myfeed_progress_dot_third_yellow"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_feed_dot_yellow"
                        android:visibility="invisible" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="접수중"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="접수완료"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="12dp"
                        android:text="접수결과"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </FrameLayout>

        </RelativeLayout>

        <!-- 관리자용 신고 관리 -->
        <RelativeLayout
            android:id="@+id/report_detail_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/white"
            android:visibility="gone">

            <TextView
                android:id="@+id/report_result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="신고 결과"
                android:textColor="@color/colorInfoTextColor"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/myfeed_progress_container"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginEnd="34dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="67dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <View
                        android:id="@+id/myfeed_progress_line_first_admin"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:background="@color/colorDivision" />

                    <View
                        android:id="@+id/myfeed_progress_line_second_admin"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:background="@color/colorDivision" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/myfeed_progress_dot_first_yellow_admin"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_feed_dot_yellow" />

                <ImageView
                    android:id="@+id/myfeed_progress_dot_second_admin"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_feed_dot_grey" />

                <ImageView
                    android:id="@+id/myfeed_progress_dot_third_admin"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_feed_dot_grey" />

                <ImageView
                    android:id="@+id/myfeed_progress_dot_second_yellow_admin"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_feed_dot_yellow"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/myfeed_progress_dot_third_yellow_admin"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_feed_dot_yellow"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/progress_container_text_admin"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_below="@id/myfeed_progress_container"
                android:layout_gravity="bottom"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="접수완료"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="제거완료"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="검사완료"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/progress_container_checkbox_admin"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/progress_container_text_admin"
                android:layout_gravity="bottom"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/progress_checkbox_admin_accepted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/progress_checkbox_admin_found"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/progress_checkbox_admin_clean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="22dp"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <Button
                android:id="@+id/report_confirm_admin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@id/progress_container_checkbox_admin"
                android:layout_marginTop="12dp"
                android:background="@color/colorPrimary"
                android:text="확인"
                android:textColor="@color/colorDeepDarkGray"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>