<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#ffffff">

    <View
        android:id="@+id/myComment_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorDivision" />

    <TextView
        android:id="@+id/myComment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myComment_view"
        android:layout_marginStart="18dp"
        android:layout_marginTop="11dp"
        android:textColor="#de000000"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/myComment_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/myComment_date"
        android:layout_below="@+id/myComment_date"
        android:layout_marginTop="1dp"
        android:textColor="#de000000"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/myComment_menu"
        android:layout_width="12dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/myComment_view"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_mypage_comment_more" />

</RelativeLayout>