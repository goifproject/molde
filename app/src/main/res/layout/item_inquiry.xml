<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <TextView
        android:id="@+id/inquiry_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/history_delete_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:text="@string/dummy"
        android:textColor="@color/colorLittleDarkGray"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/inquiry_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inquiry_content"
        android:layout_alignParentEnd="true"
        android:text="lkj@gmail.com"
        android:layout_marginTop="4dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_below="@id/inquiry_email"
        android:layout_marginTop="8dp"
        android:background="@color/colorDivision" />

</RelativeLayout>