<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/comment_space"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#fcfcfc"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/myComment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_space"
        android:layout_marginStart="15dp"
        android:layout_marginTop="41dp"
        android:layout_toStartOf="@id/myComment_image"
        android:maxLines="3"
        android:textColor="#4a4a4a"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/myComment_image"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/comment_space"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/img_placeholder_my_comment" />

</RelativeLayout>

