<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginTop="9dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/myComment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#4a4a4a"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="15dp"
        android:text="에어비앤*에서 다시 몰카 발각" />
    
    <ImageView
        android:id="@+id/myComment_image"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/mypage_image"/>

    <View
        android:id="@+id/myComment_view"
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:background="#d8d8d8"
        android:layout_below="@+id/myComment_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/myComment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:textColor="#de000000"
        android:text="2017.02.02"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/myComment_view" />

    <TextView
        android:id="@+id/myComment_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#de000000"
        android:layout_alignStart="@+id/myComment_date"
        android:layout_below="@+id/myComment_date"
        android:layout_marginTop="1dp"
        android:text="세상에… 이런일이 다 있네요 ㅠㅠ" />

    <ImageButton
        android:id="@+id/myComment_menu"
        android:layout_width="12dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/myComment_view"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/mycomment_menu_button"/>

</RelativeLayout>