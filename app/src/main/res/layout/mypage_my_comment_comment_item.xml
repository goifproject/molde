<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#ffffff">


    <View
        android:id="@+id/myComment_view"
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:background="@color/colorDivision"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/myComment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:textColor="@color/colorInfoTextColor"
        android:text="2017.02.02"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/myComment_view" />

    <TextView
        android:id="@+id/myComment_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/colorInfoTextColor"
        android:layout_alignStart="@+id/myComment_date"
        android:layout_below="@+id/myComment_date"
        android:layout_marginTop="1dp"
        android:text="세상에… 이런일이 다 있네요 ㅠㅠ" />

    <ImageView
        android:id="@+id/myComment_menu"
        android:layout_width="12dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/myComment_view"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/mycomment_menu_button"/>

</RelativeLayout>