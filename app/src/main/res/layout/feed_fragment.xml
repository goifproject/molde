<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    tools:context="com.limefriends.molde.menu_feed.MoldeFeedFragment">

    <TextView
        android:id="@+id/feed_update_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="최신 업데이트 날짜  2018.03.05"
        android:textStyle="bold"
        android:textColor="@color/colorInfoTextColor"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

        <ToggleButton
            android:id="@+id/feed_sort_toggle"
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:checked="false"
            android:textOff="@string/feedSortCategory"
            android:textOn="@string/feedSortCategory"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/colorInfoTextColor"
            android:background="@drawable/ic_feed_toggle_off"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/feed_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="42dp"
        android:fadingEdgeLength="72dp"
        android:requiresFadingEdge="vertical"
        android:layout_marginBottom="56dp"/>

</RelativeLayout>
