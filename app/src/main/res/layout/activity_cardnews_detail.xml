<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardnews_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/cardnews_icon_container"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#3a3e39"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/cardnews_page"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:background="@drawable/ic_news_card_off" />

        <TextView
            android:id="@+id/current_page_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/cardnews_page"
            android:gravity="center_vertical"
            android:text="1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/token_page_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/current_page_no"
            android:gravity="center_vertical"
            android:text=" / "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/total_page_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/token_page_no"
            android:gravity="center_vertical"
            android:text="1"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/cardnews_comment"
            android:layout_width="20dp"
            android:layout_height="19dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_news_comment_off" />

        <ImageView
            android:id="@+id/cardnews_share"
            android:layout_width="17dp"
            android:layout_height="19dp"
            android:layout_marginEnd="12dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_news_share_off" />

        <ImageView
            android:id="@+id/cardnews_scrap"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/cardnews_share"
            app:srcCompat="@drawable/ic_news_scrap_off" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/cardnews_description_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cardnews_icon_container"
        android:background="#3a3e39"
        android:minHeight="100dp">

        <TextView
            android:id="@+id/cardnews_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="20dp"
            android:maxLines="3"
            android:textColor="@color/colorWhite" />

    </ScrollView>

    <android.support.v4.view.ViewPager
        android:id="@+id/cardnews_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#dddddd"
        android:layout_above="@id/cardnews_description_wrapper"/>

</RelativeLayout>