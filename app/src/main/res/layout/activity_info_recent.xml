                android:textSize="12sp" />

            <ImageView
                android:id="@+id/img_new_molca_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_new_molca_04" />

            <TextView
                android:id="@+id/txt_new_molca_05"
