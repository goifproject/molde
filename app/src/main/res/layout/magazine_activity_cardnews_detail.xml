<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardnews_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v4.view.ViewPager
        android:id="@+id/cardnews_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#dddddd"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#3a3e39"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/cardnews_page"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:background="@drawable/ic_page" />

        <TextView
            android:id="@+id/current_page_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/cardnews_page"
            android:gravity="center_vertical"
            android:text="1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/token_page_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/current_page_no"
            android:gravity="center_vertical"
            android:text=" / "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/total_page_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/token_page_no"
            android:gravity="center_vertical"
            android:text="1"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/cardnews_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_comment_selector" />

        <ImageView
            android:id="@+id/cardnews_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_connect_selector" />

        <ImageView
            android:id="@+id/cardnews_scrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cardnews_share"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/cardnews_share"
            app:srcCompat="@drawable/ic_card_scrap_false" />

    </RelativeLayout>




</RelativeLayout>