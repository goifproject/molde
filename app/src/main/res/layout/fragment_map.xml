<?xml version="1.0" encoding="utf-8"?>
<!-- TODO 폰트 사이즈, 크기, 색상 공통으로 적용할 것 -->
<!-- TODO 각종 색깔 공통으로 관리할 것 - 배경 등 -->
<!-- TODO 아이콘 크기 공통 조절, 위젯 스타일 적용 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 지도 -->
    <fragment
        android:id="@+id/mapView"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.limefriends.molde.ui.MoldeMainActivity" />

    <!-- 맵 위에 올라가는 뷰 -->
    <RelativeLayout
        android:id="@+id/map_ui"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 검색하기 -->
        <LinearLayout
            android:id="@+id/loc_search_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_map_search" />

            <TextView
                android:id="@+id/loc_search_input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="@string/search"
                android:textSize="8pt" />

        </LinearLayout>

        <!-- 하단 버튼들 -->
        <RelativeLayout
            android:id="@+id/map_option_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 즐겨찾기 -->
            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_above="@+id/my_loc_button"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp">

                <ImageView
                    android:id="@+id/favorite_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|left"
                    android:padding="0dp"
                    android:src="@drawable/ic_map_favorite" />

                <ImageView
                    android:id="@+id/favorite_new"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|top"
                    android:src="@drawable/ic_map_new" />

            </FrameLayout>

            <!-- 현재 위치 찾기 -->
            <ImageView
                android:id="@+id/my_loc_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="72dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_map_location" />

            <!-- 신고하기 -->
            <ImageView
                android:id="@+id/report_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="72dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_map_report" />

        </RelativeLayout>

    </RelativeLayout>

    <!-- 권한이 없을 경우 대체되는 화면 -->
    <FrameLayout
        android:id="@+id/map_view_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:visibility="invisible">

        <ProgressBar
            android:id="@+id/progress_loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

    <!-- 피드 뷰페이저 -->
    <android.support.v4.view.ViewPager
        android:id="@+id/report_card_view_pager"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="56dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingEnd="@dimen/report_card_padding"
        android:paddingStart="@dimen/report_card_padding" />

</FrameLayout>
